{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "es2017", "dom"],
    "sourceMap": false,
    "outDir": "./lib",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": true,
    "baseUrl": "./src"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
